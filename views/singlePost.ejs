<!DOCTYPE html>
<html>
	<%- include('header') %>
	<body>
		<h1>Post</h1>
		<div class="singlePost">
			<div><label>Name:&nbsp;</label><%- sanitize(post.author) %></div>
			<div>
				<label>Date:&nbsp;</label><%= new
				Date(post.date).toLocaleString('en-GB') %>
			</div>
			<div>
				<label for="message" class="topAligned">Text: </label>
			</div>

			<form action="/edit/<%= post.id %>" method="POST">
				<textarea id="message" class="tall" name="message">
<%- post.content ? sanitize(post.content) : '' %></textarea>

				<button class="right-button marginTop-button" type="submit">
					Modify Post
				</button>
			</form>

			<form class="buttonForm" action="/delete/<%= post.id %>" method="GET">
				<button type="submit" class="right-button marginTop-button">
					Delete
				</button>
			</form>
		</div>
		<form class="buttonForm" action="/showPosts" method="GET">
			<button type="submit">Back</button>
		</form>
	</body>
</html>

<!DOCTYPE html>
<html>
	<%- include('header') %>
	<body>
		<h1>All posts</h1>
		<ul>
			<% posts.forEach((post) => { const date = new Date(post.created); const
			prettyDate = date.toLocaleString('en-GB'); %>
			<li>
				<div class="singlePost">
					<p class="message"><%- sanitize(post.message) %></p>
					<p class="nameAndDate">
						<%- sanitize(post.nickname) %> | <%= prettyDate %>
					</p>
					<div class="buttonsGroup">
						<form class="buttonForm" action="/edit/<%= post.id %>" method="GET">
							<button type="submit">Edit Post</button>
						</form>
						<form
							class="buttonForm"
							action="/delete/<%= post.id %>"
							method="GET"
						>
							<button type="submit" class="right-button">Delete</button>
						</form>
					</div>
				</div>
			</li>
			<% }); %>
		</ul>
		<form class="buttonForm" action="/back" method="POST">
			<button type="submit">Back</button>
		</form>
	</body>
</html>
